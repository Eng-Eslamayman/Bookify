@model SubscriberSearchResultViewModel

<div class="card shadow-sm">
    <div class="card-body">

        @if (Model is null)
        {
            <div class="alert bg-light-warning border border-warning border-3 justify-content-between border-dashed mt-10 d-flex w-100 p-5 mb-10">
                <div class="align-items-center d-flex">
                    <!--begin::Content-->
                    <div class="d-flex flex-column pe-0 pe-sm-10">
                        <h5 class="mb-1">No Subscribers were found!</h5>
                    </div>
                    <!--end::Content-->
                </div>

                <div>
                    <a class="btn btn-sm btn-primary" asp-action="Create">
                        Add Subscriber
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-column justify-content-center">
                    <h4>@Model.FullName</h4>
                    <div class="mt-3">
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Key">
                            Details
                        </a>
                    </div>
                </div>
                <div>
                    <div class="symbol symbol-100px">
                        <img src="@Model.ImageThumbnailUrl" alt="" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>